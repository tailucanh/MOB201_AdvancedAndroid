<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingHorizontal">70dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/custom_button_notes_3</item>
        <item name="android:elevation">10dp</item>
    </style>

    <style name="style_text_inputs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/background_color_edit_text_note_1</item>
    </style>
</resources>